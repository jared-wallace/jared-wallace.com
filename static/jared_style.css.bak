body 
{
   color:#6b90d4;
   font-family:"Verdana";
   font-size:100%
}

html 
{
  background: url(background3.jpg) no-repeat center center fixed; 
  -webkit-background-size: cover;
  /*-moz-background-size: cover;*/
  -o-background-size: cover;
  background-size: cover;
}

#nav{
   list-style:none;
   margin-bottom:10px;
   float:left;
   width:100%;
   position:relative;
   z-index:5;
}
#nav li{
   float:left;
   margin-right:10px;
   position:relative;
}
#nav a{
   display:block;
   padding:5px;
   color:#fff;
   background:none;
   text-decoration:none;
}
#nav a:hover{
   color:none;
   background:none;
   text-decoration:none;
}

#nav ul{
   background:#fff;
   background:rgba(5,5,5,.7);
   list-style:none;
   position:absolute;
   left:-9999px;
}
#nav ul li{
   padding-top:1px;
   float:none;
}
#nav ul a{
   white-space:nowrap;
}
#nav li:hover ul{
   left:0;
}
#nav li:hover a{
   background:none;
   text-decoration:none;
}
#nav li:hover ul a{
   text-decoration:none;
}
#nav li:hover ul li a:hover{
   background:none;
   text-decoration:none;
}

.footer
{
clear: both;
position: absolute;
width: 100%;
left: 50%;
right: 50%;
bottom: 0%;
}
